{
  "extends": "./node_modules/electron-webpack/tsconfig-base.json",
  "compilerOptions": {
    "target": "es6",
    "lib": ["es6", "dom", "esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "allowJs": false,
    "jsx": "react",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "strict": true,
    "outDir": "dist",
    "baseUrl": ".",
  },
  "include": [
    "src/**/*",
    "src/node_modules"
  ],
  "exclude": [
    "scripts",
    "node_modules",
    "docs",
    "dist",
    "**/__test__",
  ],
  "compileOnSave": true
}
